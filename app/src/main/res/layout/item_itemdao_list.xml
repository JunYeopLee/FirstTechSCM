<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/border_itemdao"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical">
        <CheckBox
            android:id="@+id/ckbox_select_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:button="@null"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/btn_ckbox_select_item"/>
        <TextView
            android:id="@+id/txt_itemname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:text="고등어(소금안친거)"
            android:textColor="@color/titlebar_color"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:gravity="right">
            <ImageButton
                android:id="@+id/btn_item_status"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"/>
         </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_itemdao_information"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="-1dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/border_itemdao"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_category_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="분류"
                android:textStyle="bold"
                android:textSize="13dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="수산물생선까지열글자"
                android:textSize="13dp"
                android:textColor="@color/value_color"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_expirydate_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="5dp"
                android:text="유통기한"
                android:textStyle="bold"
                android:textSize="13dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_expirydate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="15-08-31  "
                android:textSize="13dp"
                android:textColor="@color/value_color"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_standard_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="규격"
                android:textStyle="bold"
                android:textSize="13dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_standard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="10000"
                android:textSize="13dp"
                android:textColor="@color/value_color"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_unit_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="단위"
                android:textStyle="bold"
                android:textSize="13dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="KG"
                android:textSize="13dp"
                android:textColor="@color/value_color"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_amount_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수량"
                android:textStyle="bold"
                android:textSize="13dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="10000"
                android:textSize="13dp"
                android:textColor="@color/value_color"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_price_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="단가"
                android:textStyle="bold"
                android:textSize="13dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="10000"
                android:textSize="13dp"
                android:textColor="@color/value_color"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/txt_location_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보관장소"
                android:textStyle="bold"
                android:textSize="13dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="보관장소열글자에맞춰"
                android:textSize="13dp"
                android:textColor="@color/value_color"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/txt_location_layout"/>
            <TextView
                android:id="@+id/txt_customer_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="거래처"
                android:textStyle="bold"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/txt_location_layout"/>
            <TextView
                android:id="@+id/txt_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="거래처도열글자에맞춰"
                android:textSize="13dp"
                android:textColor="@color/value_color"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/txt_customer_layout"
                android:layout_alignLeft="@+id/txt_location"
                android:layout_below="@+id/txt_location"/>
            <ImageButton
                android:id="@+id/btn_item_history"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_item_history"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
