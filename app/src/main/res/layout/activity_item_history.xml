<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/buying_background"
    android:layout_height="match_parent" android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="80dp"
    android:paddingBottom="80dp"
    android:background="#99000000"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.iislab.junyeop_imaciislab.moneyball.Moneyball.BuyingMoneyballActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_date_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:gravity="center"
            android:text="일시"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/txt_status_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:gravity="center"
            android:text="상태"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/txt_location_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:gravity="center"
            android:text="현재위치"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listview_itemhistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#DCDCDC">
    </ListView>
</LinearLayout>