<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.junyeop_imaciislab.firsttechscm.activity.TagReadActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_weight="13"
        android:background="#DCDCDC"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#292929">
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="TAG 323"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="15-07-08 12:00:45"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:paddingTop="12dp">
            <ListView
                android:id="@+id/listview_tagread"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="12dp"
                android:divider="#DCDCDC">
            </ListView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:gravity="center_vertical"
        android:background="#292929"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btn_get_stock"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@android:color/holo_orange_dark"
            android:text="입고"/>
        <Button
            android:id="@+id/btn_get_release"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@android:color/holo_orange_dark"
            android:text="출고"/>
        <Button
            android:id="@+id/btn_get_return"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@android:color/holo_orange_dark"
            android:text="반품"/>
    </LinearLayout>
</LinearLayout>
