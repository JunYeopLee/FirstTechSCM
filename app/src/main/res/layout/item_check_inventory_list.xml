<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/transparent">
    <LinearLayout
        android:id="@+id/layout_information"
        android:layout_width="285dp" android:layout_height="90dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:background="@drawable/border_itemdao"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/txt_itemname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:text="고등어"
                android:textColor="@color/titlebar_color"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="-1dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            android:background="@drawable/border_itemdao">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_category_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="분류"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/txt_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="수산물생선까지열글자"
                    android:textSize="13dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_standard_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="규격"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/txt_standard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="10000"
                    android:textSize="13dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/txt_unit_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="단위"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/txt_unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="KG"
                    android:textSize="13dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/txt_amount_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="수량"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="10000"
                    android:textSize="13dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_check_detail"
        android:layout_width="45dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/layout_information"
        android:src="@drawable/btn_inventory_detail"/>
</RelativeLayout>
